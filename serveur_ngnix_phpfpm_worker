#installer php-fpm 
apt-get install php-fpm

#chercher php.ini
php --ini |grep Loaded
Loaded Configuration File:         /etc/php/7.0/cli/php.ini

#editer ce fichier
nano /etc/php/7.0/cli/php.ini

#mettre et activer la ligne ;cgi.fix_pathinfo=1 à
cgi.fix_pathinfo=0

#remdémarrer:
systemctl restart php7.0-fpm

#regarder le status
systemctl status nginx
